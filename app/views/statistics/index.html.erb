<h1>Recognition Statistics</h1>

<p>Enter a date range and click the button to generate a downloadable report (CSV format).</p>

<%= form_tag statistics_path, method: 'GET', class: 'input-daterange', id: 'datepicker' do %>

  <div class="form-group">
    <label for="start_date">From:</label>
    <input type="text" aria-label="Start Date" class="form-control form-control-lg" name="start_date" id="start_date" placeholder="Start Date"/>
  </div>

  <div class="form-group">
    <label for="start_date">To:</label>
    <input type="text" aria-label="End Date" class="form-control form-control-lg" name="end_date" id="end_date" placeholder="End Date"/>
  </div>

  <button type="submit" class="btn btn-primary">Generate Report</button>

<% end %>
