<%= simple_form_for(@recognition) do |f| %>
  <%= f.input :recognizee,
              collection: employees,
              include_blank: false %>

  <%= f.input :library_value,
              collection: library_values,
              include_blank: false %>

  <%= f.input :description %>

  <%= f.input :anonymous %>

  <%= f.input :recognizer %>

  <%= f.button :submit, class: "btn-primary" %>
<% end %>
