<%= simple_form_for(@recognition) do |f| %>
  <%= f.input :recognizee,
              prompt: 'Select employee to recognize',
              collection: employees %>

  <%= f.input :library_value,
              prompt: 'Select library value',
              collection: library_values %>

  <%= f.input :description %>

  <%= f.input :anonymous %>

  <%= f.button :submit, class: "btn-primary" %>
<% end %>
